def gv

pipeline {
    agent any
    tools {nodejs "Node17"}
    
    environment{
        NODE_ENV='Production'
    }
    
    parameters{
  	string(name: 'VERSION', defaultValue: '', description: 'Provide the version')
	choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: 'Select the version')
	booleanParam(name: 'executeTest', defaultValue:true, description: 'Execute Text')
    }   
    stages {
	stage('init') {
	    steps {	
		script {
			gv=load"script.groovy"
		}	
	    }
	}

        stage('Source') {
            steps {
		script {
			gv.buildApp()
		}

                git 'https://github.com/krishnappan/Nodejs.git'
                sh 'cat index.html'
            }
        }
        stage('build') {
            environment{
                NODE_ENV = 'Staging'
            }
                when {
                        expression {
                                params.executeTest
                        }
                 }

            steps {
                echo NODE_ENV
		script {
			gv.testApp()
		}		

                withCredentials([string(credentialsId: '6b775556-f59a-45b3-9f9a-4dd77fb3acc1', variable: 'secver')]) {
                    // some block
                    echo secver
                }
                sh 'npm install'
            }
        }

	stage ('deploy') {
	    steps {
		script {
			gv.deployApp()
	               }	
		}    
        }
	
	stage('artifact') {
            steps {
                archiveArtifacts artifacts: '**', followSymlinks: false
            }            
        }        
    }
}
